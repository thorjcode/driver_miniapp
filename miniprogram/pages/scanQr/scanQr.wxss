/* pages/scanQr/scanQr.wxss */
/* 扫码 */
.Scan_box {
	margin: 20rpx;
	margin-bottom: 20rpx;
	border-radius: 16rpx;
	background-color: #fff;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);
}

.Scan_title {
	margin: 10rpx;
	text-align: center;
	font-size: 12px;
	color: green;
	font-weight: bold;
	margin-bottom: 20px;
}

.Scan_img {
	margin: 10rpx;
	text-align: center;
}

.Scan_img image {
	width: 150rpx;
	height: 150rpx;
}

/* 数据列表 */
.list_box {
	margin: 20rpx;
	border-radius: 16rpx;
	padding: 25rpx;
	background-color: #fff;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);
}

.title {
	font-size: 15px;
	font-weight: bold;
	margin-bottom: 20rpx;
}

.tips {
	font-size: 12px;
	color: rgb(33, 207, 111);
}

.desc {
	margin-top: 15rpx;
	font-size: 14px;
	color: grey;
}

.text_green {
	color: green;
}

.text_red {
	color: red;
}

.text_blue {
	color: cornflowerblue;
}

.text_springgreen {
	color: springgreen;
}

/* 协议 */

.openAgreementText {
	margin: 10rpx;
	font-size: 10px;
	font-family: PingFang SC, PingFang SC-Regular;
	font-weight: 400;
	text-align: right;
	color: #80B8F8;
}

.isAgreeBox {
	padding: 20rpx;
	display: flex;
	align-items: center;
}

.isAgreeText {
	text-align: left;
	margin-left: 20rpx;
	color: #333;
	font-size: 11px;
	font-family: PingFang SC, PingFang SC-Regular;
	font-weight: 400;
}

/* 九宫格 */
.sudoku_root {
	margin-top: 30rpx;
	display: flex;
	justify-content: space-around;
}

.sudoku_item {
	position: relative;
	width: 220rpx;
	height: 220rpx;
	margin: 20rpx;
	display: flex;
	flex-direction: column;
	text-align: center;
	align-items: center;
	background-color: #fff;
	border-radius: 20rpx;
	vertical-align: middle;
	box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.5);
}

.sudoku_item_img {
	z-index: 0;
	margin: 10rpx;
	align-items: center;
	width: 140rpx;
	height: 140rpx;
}

.sudoku_item_title {
	z-index: 0;
	margin: 10rpx;
	text-align: center;
	font-size: 15px;
}


/* 搜索框 */
.search_box {
	margin: 20rpx;
	padding: 10rpx;
	margin-bottom: 20rpx;
	border-radius: 16rpx;
	background-color: #fff;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);
}

/* 选择位置 */
.chooseLocation {
	margin: 30rpx;
}

.chooseLocation image {
	width: 90rpx;
	height: 90rpx;
}

.chooseLocation input {
	float: right;
	width: 80%;
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: #0080ff solid 1px;
}

/* 按钮 */
.btn {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	margin: 20rpx;
}

.btn_cancel {
	width: 40%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 16rpx;
	color: white;
	background-color: crimson;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);

}

.btn_confirm {
	width: 40%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 16rpx;
	color: white;
	background-color: limegreen;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);

}