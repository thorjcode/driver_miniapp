<!--BackstagePackage/driverApproved/driverApproved.wxml-->

<view class="list-box" wx:for="{{StatusList}}" wx:key='key'>
	<view class="title">已审核信息</view>
	<view class="desc">姓名：<text class="text_blue">{{item.name}}</text></view>
	<view class="desc" data-phone="{{item.phone}}" bindtap="CallPhone">电话：<text class="text_blue">{{item.phone}}</text></view>
	<view class="desc">驾龄：<text class="text_blue">{{item.drivingAge}}</text></view>
	<view class="desc">驾驶证：<text class="text_blue">{{item.driving}}</text></view>
	<view class="desc">上传时间：<text class="text_red">{{item.ApplyTime}}</text></view>
	<view class="desc">审核状态：<text class="text_red">已审核</text></view>
	<view class="desc">所在地址：<text class="text_blue">{{item.city}}</text></view>

	<!-- 身份证 -->
	<view class="cu-form-group" style="padding-left:5px;">
		<view class='title'>
			<text decode="true">&nbsp;&nbsp;身份证：</text>
		</view>
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{idCardImg}}" wx:key="index" bindtap="PreiewidCardImg" data-url="{{idCardImg[index]}}">
				<image src='{{idCardImg[index]}}' mode='aspectFill'></image>
			</view>
		</view>
	</view>

	<!-- 驾驶证 -->
	<view class="cu-form-group" style="padding-left:5px;">
		<view class='title'>
			<text decode="true">&nbsp;&nbsp;驾驶证：</text>
		</view>
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{drivingImg}}" wx:key="index" bindtap="PreiewdrivingImg" data-url="{{drivingImg[index]}}">
				<image src='{{drivingImg[index]}}' mode='aspectFill'></image>
			</view>
		</view>
	</view>

</view>
<view class="list-box">
	<view class="title">账户信息</view>
	<view class="desc">余额：<text class="text_blue">{{StatusList[0].wallet}}</text>（元）</view>
	<view class="desc">单数：<text class="text_blue">{{StatusList[0].finishOrder}}</text>（单）</view>
	<view class="desc">综合评分：<text class="text_blue">{{StatusList[0].score}}</text></view>
	<view class="desc">工作状态：<text class="text_blue">{{StatusList[0].working == true ? '工作中':'空闲中'}}</text></view>
</view>


<view class="list-box">
	<view class="title">审核信息：</view>
	<view class="desc">审核人：{{StatusList[0].auditor}}</view>
	<view class="desc">审核状态：<text class="text_red">已审核</text></view>
	<view class="desc">审核时间：{{StatusList[0].AuditTime}}</view>
</view>


<!-- 按钮 -->
<view class="list-box">
	<view>禁用：
		<switch checked="{{forbiddenSwitch}}" bindchange="forbidden" />
	</view>
</view>