<!--BackstagePackage/driverApprovedList/driverApprovedList.wxml-->

<!-- 数据列表 -->
<view class="list_box">

	<view class="list_item" wx:for="{{publishList}}" wx:key='index' data-id="{{item['_id']}}" bindtap="Navigate">
		<view class="title">序号：{{index+1}}</view>
		<view class="desc">姓名：{{item.name}}</view>
		<view class="desc">电话：{{item.phone}}</view>
		<view class="desc">驾龄：{{item.drivingAge}}</view>
		<view class="desc">驾驶证：{{item.driving}}</view>

		<view class="desc">审核状态：<text class="text_green">已审核</text></view>
		<view class="desc">审核时间：<text class="text_blue">{{item.AuditTime}}</text></view>
		<view class="desc" wx:if="{{item.forbidden == true}}">禁用状态：<text class="text_red">已禁用</text></view>
		<view class="desc">所在地址：{{item.city}}</view>
		<view class="desc text_springgreen">说明：点击卡片查看详细信息</view>
	</view>
	<view class="list_item" wx:if='{{publishList.length==0}}'>
		<view class="desc" style="text-align: center;">暂时没有已审核的内容</view>
	</view>

</view>