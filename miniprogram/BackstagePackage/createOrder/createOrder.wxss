/* BackstagePackage/createOrder/createOrder.wxss */
/* 数据列表 */
.list_box {
	margin: 20rpx;
	border-radius: 16rpx;
	padding: 25rpx;
	background-color: #fff;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);
}

.title {
	font-size: 15px;
	font-weight: bold;
	margin-bottom: 20rpx;
}

.tips {
	font-size: 12px;
	color: rgb(33, 207, 111);
}

.desc {
	margin-top: 15rpx;
	font-size: 14px;
	color: grey;
}
.text_green {
	color: green;
}

.text_red {
	color: red;
}

.text_blue {
	color: cornflowerblue;
}

.text_springgreen {
	color: springgreen;
}

/* 协议 */

.openAgreementText {
	margin: 10rpx;
	font-size: 10px;
	font-family: PingFang SC, PingFang SC-Regular;
	font-weight: 400;
	text-align: right;
	color: #80B8F8;
}
.isAgreeBox{
	padding:20rpx;
	display:flex;
	align-items: center;
}

.isAgreeText{
	text-align: left;
	margin-left: 20rpx;
	color: #333;
	font-size: 11px;
	font-family: PingFang SC, PingFang SC-Regular;
	font-weight: 400;
}

/* 搜索框 */
.search_box {
	margin: 20rpx;
	padding: 10rpx;
	margin-bottom: 20rpx;
	border-radius: 16rpx;
	background-color: #fff;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);
}

/* 选择位置 */
.chooseLocation {
	margin: 30rpx;
}

.chooseLocation image {
	width: 90rpx;
	height: 90rpx;
}

.chooseLocation input {
	float: right;
	width: 80%;
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: #0080ff solid 1px;
}
.inputPrice input{
	border-bottom: #0080ff solid 1px;
}

/* 按钮 */
.btn {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	margin: 20rpx;
}

.btn_cancel {
	width: 40%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 16rpx;
	color: white;
	background-color: crimson;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);

}

.btn_confirm {
	width: 40%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 16rpx;
	color: white;
	background-color: limegreen;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);

}

/* 推荐 */
.scroll_box{
	margin: 15rpx 30rpx;
	border-radius: 15rpx;
	background-color: #f0f0f0;
	border: 2rpx cornflowerblue solid;
}