/* BackstagePackage/driverRepulse/driverRepulse.wxss */
/* 卡片 */
.card {
    margin: 5px 15px;
    padding: 8px;
    border-radius: 5px;
    display: flex;
    background-color: #fff;
    box-shadow: 4px 4px 8px  rgba(0,0,0,0.5);
}

.info_box {
    margin-left: 10px;
}

.info_name {
    font-size: 18px;
    color: green;
}

.info_note {
    margin: 10rpx 0rpx 10rpx 0rpx;
    font-size: 16px;
    color: gray;
}
.info_tip{
    margin: 10rpx 0rpx 10rpx 0rpx;
    font-size: 10px;
    color: blue;
}

/* 没有数据 */
.list_box {
    margin-top: 10rpx;
}

.list_item {
    height: auto;
    margin: 20rpx 20rpx;
    border-radius: 15rpx;
    padding: 25rpx;
    background-color: #ffffff;
	box-shadow: 20rpx 20rpx 10rpx rgba(39, 48, 57, 0.05);
}

.desc {
    margin-top: 20rpx;
    font-size: 12px;
    color: grey;
}