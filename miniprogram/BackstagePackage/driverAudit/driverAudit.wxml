<!--BackstagePackage/driverAudit/driverAudit.wxml-->
<!-- 待审核详情 -->
<view wx:if="{{!repulse}}">
    <view class="list-box">
        <text decode="true" class="tips">【提示】</text>
        <text decode="true" class="desc">\n 1、请检查上传的内容,如有问题,可点击“电话”拨打询问 \n 2、如果没有问题，点击“通过审核”,即可。</text>
    </view>
    <view class="list-box" wx:for="{{StatusList}}" wx:key='key'>
        <view class="title">待审核信息</view>
        <view class="desc">姓名：<text class="text-blue">{{item.name}}</text></view>
        <view class="desc" data-phone="{{item.phone}}" bindtap="CallPhone">电话：<text class="text-blue">{{item.phone}}</text></view>
        <view class="desc">驾龄：<text class="text-blue">{{item.drivingAge}}</text></view>
        <view class="desc">驾驶证：<text class="text-blue">{{item.driving}}</text></view>
        <view class="desc">上传时间：<text class="text-red">{{item.ApplyTime}}</text></view>
        <view class="desc">审核状态：<text class="text-red">待审核</text></view>
        <view class="desc">所在地址：<text class="text-blue">{{item.city}}</text></view>

        <!-- 凭证照片 -->
        <view class="cu-form-group" style="padding-left:5px;">
            <view class='title'>
                <text decode="true">&nbsp;&nbsp;身份证：</text>
            </view>
            <view class="grid col-4 grid-square flex-sub">
                <view class="bg-img" wx:for="{{idCardImg}}" wx:key="index" bindtap="PreiewidCardImg" data-url="{{idCardImg[index]}}">
                    <image src='{{idCardImg[index]}}' mode='aspectFill'></image>
                </view>
            </view>
        </view>

        <!-- 车辆照片 -->
        <view class="cu-form-group" style="padding-left:5px;">
            <view class='title'>
                <text decode="true">&nbsp;&nbsp;驾驶证：</text>
            </view>
            <view class="grid col-4 grid-square flex-sub">
                <view class="bg-img" wx:for="{{drivingImg}}" wx:key="index" bindtap="PreiewdrivingImg" data-url="{{drivingImg[index]}}">
                    <image src='{{drivingImg[index]}}' mode='aspectFill'></image>
                </view>
            </view>
        </view>

    </view>
    <view class="padding flex flex-direction">
        <button class='btn' type="primary" bindtap="passModal">通过审核</button>
        <button class='btn' style="background:#ff0000;" bindtap="repulseModal">打回申请</button>
    </view>
</view>

<view class="list-box" wx:if="{{repulse}}">
    <view>
        <input class="fill_item" placeholder="填写打回原因" id="RepulseCause" value="{{RepulseCause}}" type="text" maxlength='200' auto-height="true" data-key="RepulseCause" style='color: #0080ff;' bindinput="InputData"></input>
    </view>
    <view class="SubmitBtnBox">
        <button bindtap="Confirm" type="primary">确认</button>
        <button bindtap="Cancel" type="warn">取消</button>
    </view>
</view>